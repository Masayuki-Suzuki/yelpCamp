<%- include('../partials/header') %>
<article class="container">
    <div class="row newBody">
        <div class="col-lg-12 col-mg-12 col-sm-12">
            <h1 class="addPageHeading">Edit <%= campground.name %></h1>
            <form class="addCampground" action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
                <label>Campground Name: </label>
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name%>">
                <label>Image URL:</label>
                <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
                <label>Description:</label>
                <textarea class="form-control" name="campground[desc]" rows="8" cols="50"><%= campground.description%></textarea>
                <button class="btn bnt-large btn-primary" name="submit">Submit</button>
            </form>
        </div>
    </div>
</article>
<%- include('../partials/footer') %>
