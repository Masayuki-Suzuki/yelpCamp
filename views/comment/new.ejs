<%- include('../partials/header') %>
<article class="container">
  <div class="row newBody">
    <div class="col-lg-12 col-mg-12 col-sm-12">
      <h1 class="addPageHeading">Add New Comment to <%= campground.name%></h1>
      <form class="addCampground" action="/campgrounds/<%= campground._id %>/comments/" method="post">
        <label>Author: </label>
        <input class="form-control" type="text" name="comment[author]" placeholder="John Doe">
        <label>Comment: </label>
        <textarea rows="8" cols="50" class="form-control" name="comment[text]" placeholder="Great Campground!!"></textarea>
        <button class="btn bnt-large btn-primary" name="submit">Submit</button>
      </form>
    </div>
  </div>
</article>
<%- include('../partials/footer') %>
