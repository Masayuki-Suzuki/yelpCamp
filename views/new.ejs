<%- include('./header') %>
<article class="container">
  <div class="row newBody">
    <div class="col-lg-12 col-mg-12 col-sm-12">
      <h1 class="addPageHeading">Create a New Campground</h1>
      <form class="addCampground" action="/campgrounds" method="post">
        <label>Campground Name: </label>
        <input class="form-control" type="text" name="name" placeholder="Grand Canyon">
        <label>Image URL:</label>
        <input class="form-control" type="text" name="image" placeholder="http://www.example.com/image/example.jpg">
        <label>Description:</label>
        <textarea class="form-control" name="desc" rows="8" cols="50"></textarea>
        <button class="btn bnt-large btn-primary" name="submit">Submit</button>
      </form>
    </div>
  </div>
</article>
<%- include('./footer') %>
